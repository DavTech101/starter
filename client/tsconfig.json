{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@data/*": ["./src/data/*"],
      "@fonts/*": ["./src/fonts/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@utils/*": ["./src/utils/*"],
      "@Types/*": ["./src/types/*"],
      "@types": ["./src/types/index"],
      "@config/*": ["./src/config/*"],
      "@styles/*": ["./src/styles/*"],
      "@server/*": ["./src/server/*"],
      "@schemas/*": ["./src/schemas/*"],
      "@context/*": ["./src/context/*"],
      "@providers/*": ["./src/providers/*"],
      "@components/*": ["./src/components/*"],
      "@footer/*": ["./src/components/footer/*"],
      "@coreStyles": ["./src/styles/coreStyles"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
